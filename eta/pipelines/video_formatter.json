{
    "info": {
        "name": "video_formatter",
        "type": "eta.core.types.Pipeline",
        "version": "0.1.0",
        "description": "A pipeline for formatting video files"
    },
    "inputs": ["video"],
    "outputs": ["formatted_video"],
    "modules": {
        "resize_videos": {
            "name": "resize_videos",
            "tunable_parameters": ["size", "scale", "max_size"],
            "set_parameters": {}
        },
        "sample_videos": {
            "name": "sample_videos",
            "tunable_parameters": ["fps", "max_fps"],
            "set_parameters": {}
        }
    },
    "connections": [
        {
            "source": "INPUT.video",
            "sink": "resize_videos.input_path"
        },
        {
            "source": "resize_videos.output_video_path",
            "sink": "sample_videos.input_path"
        },
        {
            "source": "sample_videos.output_video_path",
            "sink": "OUTPUT.formatted_video"
        }
    ]
}
